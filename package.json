{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Projeto para me desafiar em relação à programação.",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down -v",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "lint:eslint:fix": "",
    "test": "npm run services:up && concurrently --names next,jest --hide next --kill-others -k --success command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --runInBand --watchAll",
    "migration:create": "node-pg-migrate create -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations up --envPath .env.development",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "git-cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.13.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.19.0",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "globals": "^15.14.0",
    "husky": "^9.1.4",
    "jest": "^29.6.2",
    "prettier": "3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
